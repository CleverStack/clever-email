{
    "clever-email": {
        "cc":       true,
        "bcc":      true,
        "text":     false,

        "controllerEnabled": true,

        "systems": {
            "Mandrill": {
                "isActive": true,
                "apiKey":   "you api key",
                "async":    false
            },
            "SendGrid": {
                "isActive": false,
                "apiUser" : "you api user",
                "apiKey" :  "you api key"
            },
            "MailGun": {
                "isActive": false,
                "domain" :  "you domain",
                "apiKey" :  "you api key"
            }
        },

        "default": {
            "noReply":      "true",
            "from":         "no-reply@app.cleverstack.io",
            "fromName":     "CleverStack",
            "subject":      "CleverStack: Autogenerated Notification",
            "tplName":      "default",
            "logo":         "http://app.cleverstack.com/images/logo.png"
        },

        "modelAssociations": {
            "User": {
                "hasMany": [
                    [ "Email",              { "through": "EmailUser" } ]
                ]
            },
            "Email": {
                "belongsTo": [
                    [ "User",               { "as": "to" } ]
                ],
                "hasMany": [
                    [ "User",               { "as": "carbonCopies", "through": "EmailUser" } ],
                    [ "EmailAttachment",    { "as": "attachments",  } ]
                ]
            },
            "EmailAttachment": {
                "belongsTo": [
                    "Email"
                ]
            },
            "EmailUser": {
                "belongsTo": [
                    "User",
                    "Email"
                ]
            }
        }
    }
}